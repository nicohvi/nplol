= form_for @post, :html => {:multipart => true} do |f|
  - if @post.errors.any?
    #error_explanation

    %h2
    = pluralize(@post.errors.count, 'error') + ' prohibited this post from being saved'

    %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg

  %section.form-input
    = f.label :title
    = f.text_field :title
  %section.form-input
    = f.label :tag_list
    = f.text_field :tag_list
  %section.form-input
    = f.label :content
    = f.text_area :content
  %secion.assets{class: ('hidden' if @post.assets.empty?)}
    %section.label
      =t('assets')
    %section.images
      - @post.assets.each do |asset|
        = render asset
  %section.asset-tools{class: ('hidden' if @post.assets.empty?)}
    %section.label
      &nbsp;
    %section.tools-container
      %input.asset-url
      .remove-asset
        %i.fa.fa-times.fa-lg
  %section.form-input
    = f.hidden_field :type, value: @post.type

  %section.buttons
    = link_to 'Add images?', new_asset_path, remote: true, class: 'button add-asset'
    = f.submit

= javascript_include_tag 'assets'