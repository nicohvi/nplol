%section#post-form
  = form_for @post do |f|
    - if @post.errors.any?
      #error_explanation

      %h2
      = pluralize(@post.errors.count, "error") + " prohibited this post from being saved"

      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

    %section.form-input
      = f.label :title
      = f.text_field :title
    %section.form-input
      = f.label :tag_list
      = f.text_field :tag_list
    %section.form-input
      = f.label :content
      = f.text_area :content
    %section.form-input.assets
      = render 'assets/asset', collection: @post.assets
      = link_to 'Add more files', new_asset_path, remote: true

    = f.submit