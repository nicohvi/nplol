- if asset.new_record?
  - prefix = 'post[asset_attributes][]'
  %section.form-input
    =fields_for prefix, asset do |f|
      =f.label :image
      =f.file_field :image
- else
  =image_tag asset.image.url(:thumb), class: 'asset' ,'data-clipboard-text' => asset.image.url(:thumb)