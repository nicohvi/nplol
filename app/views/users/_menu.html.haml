%section#user-menu
  .caret
    %span.caret-outer
    %span.caret-inner
  %ul
    %li.user
      =image_tag(current_user.avatar)
      ="#{current_user.name}"
    - unless current_user.nplol?
      %li.authorize= link_to 'Authorize nplol status', authorize_path, remote: true
    %li.logout= link_to 'Logout', logout_path
